{
  "name": "zadanie-1-4",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
   "test": "npm-run-all test:*",
	"test:html": "globstar nu-html-checker *.html",

	"build": "npm run build:clean && npm build:sass && npm run test"
	"build:clean": "npm install rimraf",
	"build:sass": "node-sass --output-style compact -o css sass"

	"build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",

	"watch": "npm-run-all build --p watch:sassprefixer"
	"watch:browsersync": "npm install --save-dev browser-sync"
	"watch:sassprefixer": "watch:sass & watch:autoprefixer"
	"watch:sass": "onchange node-sass --output-style expanded --source-map true -o css sass ",
	"watch:autoprefixer": "onchange -d 100 css/style.css -- autoprefixer-cli -o css/style.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "browser": "^0.2.6"
  },
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.23.6",
    "nu-html-checker": "^0.1.0"
  }
}
